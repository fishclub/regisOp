extends layout

block content
  .container
      .starter-template
        h1  Comments
        for comment in comments
         p #{comment.username} | a (href=./comments/#{comment._id})
        p Add Comment
          form#formAddComment(name="addcomment",method="post",action="/comments/addcomment")
           input#inputUserName(type="text", placeholder="username", name="username")
           input#inputContent(type="text", placeholder="content", name="content")
           button#btnSubmit(type="submit") submit